<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>piloteJDBC</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>urlBd</param-name>
        <param-value>jdbc:mysql://localhost/defilecture?user=root&amp;password=root</param-value>
    </context-param>
    <servlet>
        <servlet-name>Frontal</servlet-name>
        <servlet-class>controlleur.Frontal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CF</servlet-name>
        <servlet-class>controleur.ControleurFrontal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherPageEquipe</servlet-name>
        <servlet-class>controlleur.AfficherPageEquipe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EffectuerConnexion</servlet-name>
        <servlet-class>controlleur.EffectuerConnexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherPageConnexion</servlet-name>
        <servlet-class>controlleur.AfficherPageConnexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EffectuerDeconnexion</servlet-name>
        <servlet-class>controlleur.EffectuerDeconnexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherPageInscription</servlet-name>
        <servlet-class>controlleur.AfficherPageInscription</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EffectuerInscription</servlet-name>
        <servlet-class>controlleur.EffectuerInscription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Frontal</servlet-name>
        <url-pattern>*.Frontal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficherPageEquipe</servlet-name>
        <url-pattern>/AfficherPageEquipe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EffectuerConnexion</servlet-name>
        <url-pattern>/EffectuerConnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficherPageConnexion</servlet-name>
        <url-pattern>/AfficherPageConnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EffectuerDeconnexion</servlet-name>
        <url-pattern>/EffectuerDeconnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficherPageInscription</servlet-name>
        <url-pattern>/AfficherPageInscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EffectuerInscription</servlet-name>
        <url-pattern>/EffectuerInscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CF</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
